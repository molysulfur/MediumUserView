<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">
    <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProfile"
            android:src="@mipmap/ic_launcher"
            android:layout_margin="@dimen/dimMarginParent"
            android:layout_width="@dimen/dimImgProfile"
            android:layout_height="@dimen/dimImgProfile"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:id="@+id/tvUsername"
            tools:text="majelbstoat"
            android:textSize="@dimen/dimDescription"
            android:layout_width="@dimen/dim_0dp"
            android:gravity="center"
            android:textColor="@color/baseTitle"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/tvName"
            app:layout_constraintTop_toBottomOf="@+id/tvName"
            app:layout_constraintStart_toStartOf="@+id/tvName"
            android:layout_marginBottom="@dimen/dim_16dp"
            app:layout_constraintBottom_toBottomOf="parent"/>


    <TextView
            android:id="@+id/tvName"
            tools:text="Jamie Talbot"
            android:textStyle="bold"
            android:textSize="@dimen/dimBaseTitle"
            android:gravity="center"
            android:padding="@dimen/dim_8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/baseBtnCard"
            app:layout_constraintStart_toStartOf="@+id/imgProfile"
            app:layout_constraintTop_toBottomOf="@+id/imgProfile"
            app:layout_constraintEnd_toEndOf="@+id/imgProfile"/>

</android.support.constraint.ConstraintLayout>