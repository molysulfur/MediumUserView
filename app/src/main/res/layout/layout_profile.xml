<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             xmlns:tools="http://schemas.android.com/tools">
    <ImageView
            android:id="@+id/img_profile"
            android:src="@mipmap/ic_launcher"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dim_172dp"
            android:scaleType="centerCrop"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorShadow"
            app:layout_constraintBottom_toBottomOf="@+id/img_profile"
            app:layout_constraintStart_toStartOf="parent">
        <TextView
                android:id="@+id/tv_username"
                tools:text="majelbstoat"
                android:padding="@dimen/dim_8dp"
                android:textSize="@dimen/dim_16sp"
                android:textColor="@color/colorWhite"
                android:layout_width="@dimen/dim_0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/tv_name"
                app:layout_constraintBottom_toBottomOf="@+id/tv_name"/>

        <TextView
                android:id="@+id/tv_name"
                tools:text="Jamie Talbot"
                android:padding="@dimen/dim_4dp"
                android:textSize="@dimen/dim_32sp"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>