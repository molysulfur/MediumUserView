<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
            android:layout_margin="@dimen/dim_16dp"
            android:id="@+id/card_publication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <android.support.constraint.ConstraintLayout
                android:id="@+id/constraint_publication"
                android:background="@color/colorCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/img_publication"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dim_200dp"
                    android:src="@mipmap/ic_launcher"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="@+id/constraint_publication"
                    app:layout_constraintStart_toStartOf="@+id/constraint_publication"
                    app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                    android:id="@+id/tv_publication_name"
                    tools:text="AndroidPub"
                    android:layout_margin="@dimen/dim_8dp"
                    android:textSize="@dimen/dim_32sp"
                    android:layout_width="@dimen/dim_0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/baseTitle"
                    android:lines="1"
                    android:ellipsize="end"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/img_publication"
                    app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                    android:id="@+id/tv_publication_description"
                    tools:text="The Pub(lication) for Android and Tech, focused on Development"
                    android:layout_width="@dimen/dim_0dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/baseDescription"
                    android:textSize="@dimen/dim_16sp"
                    android:layout_marginTop="@dimen/dim_16dp"
                    app:layout_constraintEnd_toEndOf="@+id/tv_publication_name"
                    app:layout_constraintTop_toBottomOf="@+id/tv_publication_name"
                    app:layout_constraintStart_toStartOf="@+id/tv_publication_name"/>
            <Button
                    android:id="@+id/btn_page"
                    android:text="@string/publication_see"
                    android:layout_margin="@dimen/dim_16dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorTranparent"
                    android:textColor="#fd5523"
                    app:layout_constraintTop_toBottomOf="@+id/tv_publication_description"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>