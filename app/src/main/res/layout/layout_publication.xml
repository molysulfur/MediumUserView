<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
            android:layout_margin="16dp"
            android:id="@+id/card_publication"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        <android.support.constraint.ConstraintLayout
                android:id="@+id/constraint_publication"
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/img_publication"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:src="@mipmap/ic_launcher"
                    app:layout_constraintTop_toTopOf="@+id/constraint_publication"
                    app:layout_constraintStart_toStartOf="@+id/constraint_publication"
            />
            <TextView
                    android:id="@+id/tv_publication_name"
                    tools:text="AndroidPub"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toEndOf="@+id/img_publication"
                    app:layout_constraintTop_toTopOf="@+id/img_publication"/>
            <TextView
                    android:id="@+id/tv_publication_description"
                    tools:text="The Pub(lication) for Android and Tech, focused on Development"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="@id/constraint_publication"
                    app:layout_constraintTop_toBottomOf="@+id/tv_publication_name"
                    app:layout_constraintStart_toStartOf="@+id/tv_publication_name"
            />
            <Button
                    android:id="@+id/btn_page"
                    android:text="move to page"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/tv_publication_description"
                    app:layout_constraintStart_toStartOf="@+id/tv_publication_description"/>
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>